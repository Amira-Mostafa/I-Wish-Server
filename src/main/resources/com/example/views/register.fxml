<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="14"
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);"
      xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.client.controllers.RegisterController">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- Logo -->
    <HBox alignment="CENTER">
        <Label text="ðŸŽ i-Wish" style="-fx-text-fill: white;
              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 1);">
            <font>
                <Font name="Arial" size="48"/>
            </font>
        </Label>
    </HBox>

    <Label text="Join the community of gift givers" style="-fx-text-fill: white;">
        <font>
            <Font name="Arial" size="16"/>
        </font>
    </Label>

    <Label text="Create Account" style="-fx-text-fill: white;
           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.3, 0, 1);">
        <font>
            <Font name="Arial" size="22"/>
        </font>
    </Label>

    <Label text="Start making wishes come true" style="-fx-text-fill: white;">
        <font>
            <Font name="Arial" size="13"/>
        </font>
    </Label>

    <!-- Form Card -->
    <VBox alignment="CENTER" spacing="10" maxWidth="400"
          style="-fx-background-color: white;
                 -fx-background-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">

        <padding>
            <Insets top="25" right="35" bottom="25" left="35"/>
        </padding>

        <Label text="Full Name" style="-fx-font-weight: bold;"/>
        <TextField fx:id="nameField" promptText="John Doe" prefHeight="42"
                   style="-fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #e0e0e0;
                          -fx-padding: 10;"/>

        <Label text="Email Address" style="-fx-font-weight: bold;"/>
        <TextField fx:id="emailField" promptText="your@email.com" prefHeight="42"
                   style="-fx-background-radius: 8;
                          -fx-border-radius: 8;
                          -fx-border-color: #e0e0e0;
                          -fx-padding: 10;"/>

        <Label text="Password" style="-fx-font-weight: bold;"/>
        <PasswordField fx:id="passwordField" promptText="********" prefHeight="42"
                       style="-fx-background-radius: 8;
                              -fx-border-radius: 8;
                              -fx-border-color: #e0e0e0;
                              -fx-padding: 10;"/>

        <Label text="Confirm Password" style="-fx-font-weight: bold;"/>
        <PasswordField fx:id="confirmField" promptText="********" prefHeight="42"
                       style="-fx-background-radius: 8;
                              -fx-border-radius: 8;
                              -fx-border-color: #e0e0e0;
                              -fx-padding: 10;"/>

        <Label text="Profile Picture (Optional)" style="-fx-font-weight: bold;"/>

        <HBox spacing="8" alignment="CENTER_LEFT">
            <ImageView fx:id="profileImageView" fitWidth="70" fitHeight="70" preserveRatio="true"
                       style="-fx-background-radius: 35;
                              -fx-border-radius: 35;
                              -fx-border-color: #e0e0e0;
                              -fx-border-width: 2;"/>

            <VBox spacing="4">
                <Button fx:id="selectImageButton" text="Choose Image"
                        prefWidth="140" prefHeight="32"/>
                <Label fx:id="imagePathLabel"
                       style="-fx-text-fill: #666; -fx-font-size: 11;"
                       wrapText="true" maxWidth="190"/>
            </VBox>
        </HBox>

        <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" wrapText="true"/>

        <Button fx:id="createAccountButton" text="Create Account"
                prefWidth="200" prefHeight="42"/>

        <Hyperlink fx:id="signInLink" text="Already have an account? Sign In"/>

    </VBox>
</VBox>
