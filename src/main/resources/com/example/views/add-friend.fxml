<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f8f9fa;" 
      xmlns="http://javafx.com/javafx/11" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.client.controllers.AddFriendController">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="ðŸ‘¥ Add Friend" style="-fx-font-weight: bold; -fx-text-fill: #764ba2; -fx-font-size: 24;" />
    </HBox>
    
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 3);">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <Label text="Search for friends by name or email" style="-fx-font-weight: bold; -fx-font-size: 16;" />
        
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Enter name or email..." prefHeight="45" HBox.hgrow="ALWAYS" 
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-padding: 10;" />
            <Button fx:id="searchButton" text="Search" prefWidth="100" prefHeight="45" 
                    style="-fx-background-color: linear-gradient(to right, #764ba2, #667eea); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
        </HBox>
        
        <Label text="Results" style="-fx-font-weight: bold; -fx-font-size: 16;">
            <VBox.margin>
                <Insets top="10" right="0" bottom="0" left="0"/>
            </VBox.margin>
        </Label>
        
        <ScrollPane fitToWidth="true" prefHeight="300" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox fx:id="resultsContainer" spacing="10" />
        </ScrollPane>
        
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20"/>
            </padding>
            
            <Button fx:id="cancelButton" text="Close" prefWidth="150" prefHeight="45" 
                    style="-fx-background-color: #f8f9fa; -fx-text-fill: #333; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-border-width: 1;" />
        </HBox>
    </VBox>
</VBox>