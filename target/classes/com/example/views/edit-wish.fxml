<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f8f9fa;" 
      xmlns="http://javafx.com/javafx/11" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.client.controllers.EditWishController">
    
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>
    
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="✏️ Edit Wish" style="-fx-font-weight: bold; -fx-text-fill: #764ba2; -fx-font-size: 24;" />
    </HBox>
    
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 3);">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        
        <GridPane hgap="15" vgap="15">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            
            <Label text="Wish Name *" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nameField" promptText="e.g., Apple Watch Series 8" prefHeight="40" 
                       GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Description" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextArea fx:id="descriptionField" promptText="Describe your wish..." prefRowCount="3" 
                      GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Price ($) *" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="priceField" promptText="e.g., 399.99" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label text="Image URL (Optional)" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="imageField" promptText="https://example.com/image.jpg" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>
        
        <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" wrapText="true" />
        
        <HBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" />
            </padding>
            
            <Button fx:id="saveButton" text="Save Changes" prefWidth="150" prefHeight="45" 
                    style="-fx-background-color: linear-gradient(to right, #764ba2, #667eea); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
            
            <Button fx:id="cancelButton" text="Cancel" prefWidth="150" prefHeight="45" 
                    style="-fx-background-color: #f8f9fa; -fx-text-fill: #333; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-border-width: 1;" />
        </HBox>
    </VBox>
</VBox>
