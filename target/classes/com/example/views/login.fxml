<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" 
      xmlns="http://javafx.com/javafx/11" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.client.controllers.LoginController">
    
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    
    <HBox alignment="CENTER" spacing="10">
        <Label text="ðŸŽ i-Wish" style="-fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0.5, 0, 1);">
            <font>
                <Font name="Arial" size="48" />
            </font>
        </Label>
    </HBox>
    
    <Label text="Make wishes come true together" style="-fx-text-fill: white;">
        <font>
            <Font name="Arial" size="18" />
        </font>
    </Label>
    
    <Label text="Welcome Back!" style="-fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.3, 0, 1);">
        <font>
            <Font name="Arial" size="24" />
        </font>
    </Label>
    
    <Label text="Sign in to continue spreading happiness" style="-fx-text-fill: white;">
        <font>
            <Font name="Arial" size="14" />
        </font>
    </Label>
    
    <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);" maxWidth="400">
        <padding>
            <Insets bottom="30" left="40" right="40" top="30" />
        </padding>
        
        <Label text="Email Address" style="-fx-font-weight: bold;">
            <font>
                <Font name="Arial" size="14" />
            </font>
        </Label>
        <TextField fx:id="emailField" promptText="your@email.com" prefHeight="45" 
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-padding: 10;" />
        
        <Label text="Password" style="-fx-font-weight: bold;">
            <font>
                <Font name="Arial" size="14" />
            </font>
        </Label>
        <PasswordField fx:id="passwordField" promptText="********" prefHeight="45" 
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #e0e0e0; -fx-padding: 10;" />
        
        <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" wrapText="true" />
        
        <Button fx:id="signInButton" text="Sign In" prefWidth="200" prefHeight="45" />
        
        <Hyperlink fx:id="createAccountLink" text="Don't have an account? Create Account" />
    </VBox>
</VBox>